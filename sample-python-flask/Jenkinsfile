#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                sh 'make install'
            }
        }

        stage('Run unit tests') {
            steps {
                sh 'make test'
            }
        }

        stage('Build AMI') {
            steps {
                dir('/opt/packer/templates') {
                    sh 'packer build -only=amazon-ebs flask-app.json'
                }
            }
        }

        stage('Deploy AMI') {
            steps {
                dir('/opt/terraform/aws/flask-app') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
